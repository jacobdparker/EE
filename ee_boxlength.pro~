;FUNCTION: ee_boxlength
;PURPOSE: compute time length of box
;PARAMETERS:
;  x0 = beginning position of box
;  x1 = ending position of box
;VARIABLES:
;RETURNS: len
;AUTHOR(S): A.E. Bartz 6/14/17

function ee_boxlength, x0, x1

  ;Compute total time length of boxes
  ;Note that 12 hours in regular time is 0.5 in Julian time
  timefiles=file_search('../EE_Data','dateobs*.sav')
  obs_time=fltarr(depth)
  for obs=0,depth-1 do begin
     ;restore files and set start and end times
     restore, timefiles[obs]
     start=dateobs[0]
     final=dateobs[-1]
     
     ;do START conversion
     y1=strmid(start,0,4)
     m1=strmid(start,5,2)
     d1=strmid(start,8,2)
     h1=strmid(start,11,2)
     mn1=strmid(start,14,2)
     s1=strmid(start,17,2)
     start=GREG2JUL(m1,d1,y1,h1,mn1,s1)
     
     ;do FINAL conversion
     y2=strmid(final,0,4)
     m2=strmid(final,5,2)
     d2=strmid(final,8,2)
     h2=strmid(final,11,2)
     mn2=strmid(final,14,2)
     s2=strmid(final,17,2)
     final=GREG2JUL(m2,d2,y2,h2,mn2,s2)

     ;and now we can find the length (phew)
     ;Length is stored in hours
     obs_time[obs]=(final-start)*24
  endfor
